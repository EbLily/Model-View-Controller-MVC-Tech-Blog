<div class="text-center">
  <h2>{{title}}</h2>
 
  <p>{{content}}</p>
  <p>Created by <span style="background-color: burlywood;">{{user.name}}</span> on {{ date}}</p>


  <div class="col-md-6">
    <h2>Add Comment</h2>

    <form class="form comment-form">
      <div class="form-group">
        <label for="title">Add Title:</label>
        <input class="form-input" type="text" id="title" />
      </div>
      <div class="form-group">
        <label for="comment">Add Comment:</label>
        <input class="form-input" type="text" id="comment" />
      </div>
      
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>


<script src="/js/addComment"></script>